{
  "name": "screamninja/aldente",
  "description": "This is a simple PHP framework for web applications. With this framework your website is Al Dente!",
  "homepage": "https://github.com/screamninja/aldente",
  "license": "GPL-3.0",
  "require": {
    "php": "^7.2",
    "ext-PDO": "*",
    "ext-json": "*",
    "psr/log": "^1.0"
  },
  "config": {
    "platform": {
      "php": "7.2"
    }
  },
  "autoload": {
    "psr-4": {
      "AlDente\\": "app/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "phpunit/dbunit": "^4.0",
    "roave/security-advisories": "dev-master"
  }
}
